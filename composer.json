{
    "name": "naganohara/themaking-www",
    "description": "The Making Chinese Fansite.",
    "type": "project",
    "homepage": "https://www.github.com/naganohara/themaking-www",
    "authors": [
        {
            "name": "Mio Naganohara",
            "email": "naganoharamio@outlook.com",
            "homepage": "https://www.github.com/naganohara",
            "role": "main developer"
        },
        {
            "name": "Sha Miao",
            "email": "shamiaoc@outlook.com",
            "homepage": "http://www.github.com/shamiao",
            "role": "maintenance contact"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "barryvdh/laravel-ide-helper": "^2.4",
        "fideloper/proxy": "~3.3",
        "laravel/framework": "5.5.*",
        "laravel/socialite": "^3.0",
        "laravel/tinker": "~1.0",
        "socialiteproviders/qq": "^3.0"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
